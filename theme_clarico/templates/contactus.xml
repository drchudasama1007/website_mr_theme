<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--============ Contactus Info ===============-->
    <template id="contact_us_ept" inherit_id="website.contactus" name="Contact Us">
        <xpath expr="//section[hasclass('s_text_block')]" position="attributes">
            <attribute name="class">s_text_block te_contactus_text_block</attribute>
        </xpath>
        <xpath expr="//div[hasclass('s_title')]" position="attributes">
            <attribute name="class">col-lg-12 s_title pt16 pb0</attribute>
        </xpath>
        <xpath expr="//div[@id='wrap']/div[hasclass('container')]" position="attributes">
            <attribute name="class">container mt-2 mb32</attribute>
        </xpath>
        <xpath expr="//div[hasclass('col-lg-4')]" position="attributes">
            <attribute name="class">col-lg-4 te_company_details</attribute>
        </xpath>
    </template>

    <template id="contactus_template" name="Contact us">
        <t t-call="website.layout">
            <div class="oe_structure"/>
            <section>
                <div>
                    <iframe src="https://maps.google.com/maps?q=22.2736307,70.7510838&amp;z=15&amp;output=embed"
                            width="100%" height="350" frameborder="0" style="border:0"></iframe>
                </div>
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-md-2 col-sm-2"/>
                    <div class="col-md-8 col-sm-8">
                        <div class="row pt64 text-center">
                            <p class="font-weight-bold" style="font-size: 20px;">M&amp;R EUROPA GMBH</p>
                        </div>
                        <div class="row pt32 text-center">
                            <div class="col-md-1"/>
                            <div class="col-md-10">
                                <p style="font-size:13px">We are a team of passionate people whose goal is to
                                    improve everyone’s life through our wide range of services.
                                </p>
                                <p style="font-size:13px">We hope to build great supply chain solutions for your
                                    business challenges.
                                </p>
                                <p style="font-size:13px">Our services are designed for various industrial sectors;
                                    we are using our best strategies to optimize our perfor-
                                </p>
                                <p style="font-size:13px">mance in the sourcing of materials.</p>
                            </div>
                        </div>
                        <div class="row pt96 pb64 text-center">
                            <div class="col-md-4 col-sm-12">
                                <p class="font-weight-bold" style="font-size:13px">M&amp;R Europe GMBH – Munich</p>
                                <p style="font-size:13px">Gollierstr. 70 C3 – 80339 Munich – Germany</p>
                                <p style="font-size:13px">Local Phone +49 89 520566-0</p>
                                <p style="font-size:13px">Fax +49 89 520566-70</p>
                                <p style="font-size:13px">mreuropa@mr-group.com</p>
                            </div>

                            <div class="col-md-4 col-sm-12">
                                <p class="font-weight-bold" style="font-size:13px">M&amp;R USA, Inc.</p>
                                <p style="font-size:13px">6420 Richmond Ave., Suite 203 – Houston,</p>
                                <p style="font-size:13px">TX 77057 – USA</p>
                                <p style="font-size:13px">Local Phone +1 281 497 8973</p>
                                <p style="font-size:13px">Fax +1 281 497 8975</p>
                                <p style="font-size:13px">mrusa@mr-group.com</p>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <p class="font-weight-bold" style="font-size:13px">M&amp;R Asia Ltd.</p>
                                <p style="font-size:13px">10th. Floor Chiu Lung Bldg., 25 Chiu Lung</p>
                                <p style="font-size:13px">Street, Central – Hong Kong</p>
                                <p style="font-size:13px">Local Phone +852 3973 3786</p>
                                <p style="font-size:13px">Fax +852 3973 3786</p>
                                <p style="font-size:13px">mrasia@mr-group.com</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="oe_structure"/>
                <section class="bg-light">
                    <div class="row pb48">
                        <div class="col-md-2 col-sm-2"/>
                        <div class="col-md-8 col-sm-8">
                            <div class="row pt64 text-center">
                                <p class="font-weight-bold" style="font-size: 20px;">CONTACT FORM</p>
                            </div>
                            <div class="row pt16 text-center">
                                <div class="col-md-1"/>
                                <div class="col-md-10">
                                    <p style="font-size:13px">Leave your information and submit to us. Subscribe to
                                        our newsletters for more updates and reports.
                                    </p>
                                    <p style="font-size:13px">Contact us about anything related to our company or
                                        services. We'll do our best to get back to you as soon as possible.
                                    </p>
                                </div>
                            </div>
                            <div class="row pt48">
                                <div class="col-md-4">
                                    Your Name*
                                </div>
                                <div class="col-md-4">
                                    Your Email*
                                </div>
                                <div class="col-md-4">
                                    Subject
                                </div>
                            </div>

                            <div class="row pt8">
                                <div class="col-md-4">
                                    <input type="text" class="contact_input" name="name" size="32"/>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" class="contact_input" name="email" size="32"/>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" class="contact_input" name="subject" size="32"/>
                                </div>
                            </div>
                            <div class="row pt24">
                                <div class="col-md-4">
                                    Message
                                </div>
                            </div>
                            <div class="row pt8">
                                <div class="col-md-4">
                                    <textarea class="contact_input" name="message" rows="5" cols="112"></textarea>
                                </div>
                            </div>
                            <div class="text-center pt32">
                                <button class="btn" style="background:#FEE000">SEND MESSAGE</button>
                            </div>
                        </div>
                    </div>
                </section>

                <div class="oe_structure"/>
                <section style="background:#FEE000">
                    <div class="container pb56">
                        <div class="row">
                            <div class="col-md-1 col-sm-1"/>
                            <div class="col-md-10 col-sm-10">
                                <div class="row pt56 text-center">
                                    <p class="font-weight-bold" style="font-size: 20px;">Sign up to our newsleter</p>
                                </div>
                                <div class="row pt32 text-center">
                                    <div class="col-md-2 col-sm-2"/>
                                    <div class="col-md-8 col-sm-8">
                                        <div class="form-inline">
                                            <input type="text" name="subject" size="52" class="form-control"
                                                   placeholder="Enter Email Address" style="height: 43px;border: 0;"/>
                                            <button class="btn contact_newsleter">Sign up
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </section>
        </t>
    </template>

</odoo>
