    <template id="header_cart">
        <t t-set="website_sale_order" t-value="website.sale_get_order()"/>
        <a id="my_cart" href="/shop/cart" class="nav-link">
            <i class="fa fa-shopping-cart"/>
            <t t-if="website_sale_order.cart_quantity">
                <sup t-attf-class="my_cart_quantity badge badge-primary"
                     t-esc="website_sale_order and website_sale_order.cart_quantity"/>
            </t>
        </a>
    </template>
    <template id="header_wishlist">
        <t t-if="request.website.viewref('website_sale_wishlist.add_to_wishlist').active">
            <t t-set='wishcount' t-value="len(request.env['product.wishlist'].current())"/>
            <a id="my_wish" href="/shop/wishlist" class="nav-link" t-att-style="not wishcount and 'display:none;'">
                <i class="fa fa-heart"/>
                <t t-if="wishcount">
                <sup t-attf-class="my_wish_quantity o_animate_blink badge badge-primary">
                    <t t-esc='wishcount'/>
                </sup>
                </t>
            </a>
        </t>
    </template>
